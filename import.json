{
    "appConfig": {},
    "description": "A simple Hello World pipeline for testing",
    "keepWaitingPipelines": false,
    "lastModifiedBy": "test-user",
    "limitConcurrent": true,
    "name": "hello-pipeline",
    "stages": [
        {
            "name": "Manual Approval",
            "refId": "1",
            "requisiteStageRefIds": [],
            "type": "manualJudgment",
            "comments": "Approve to continue the pipeline"
        },
        {
            "name": "Hello Script",
            "refId": "2",
            "requisiteStageRefIds": [
                "1"
            ],
            "type": "runJob",
            "cloudProvider": "kubernetes",
            "account": "default",
            "manifest": {
                "apiVersion": "v1",
                "kind": "Pod",
                "metadata": {
                    "name": "hello-world"
                },
                "spec": {
                    "containers": [
                        {
                            "name": "hello",
                            "image": "busybox",
                            "command": [
                                "sh",
                                "-c",
                                "echo 'Hello from Spinnaker!' && sleep 5"
                            ]
                        }
                    ],
                    "restartPolicy": "Never"
                }
            }
        }
    ],
    "triggers": [],
    "parameterConfig": [],
    "notifications": [],
    "variables": []
}